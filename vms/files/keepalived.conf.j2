vrrp_instance VI_1 {
    state BACKUP
    interface {{ interface }}
    virtual_router_id 51
    priority {{ priority_offset - ansible_play_hosts.index(inventory_hostname) }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass kubevip
    }
    virtual_ipaddress {
        {{ vip }}
    }
}